{
  "name": "crypto-gamefi",
  "version": "1.0.0",
  "description": "Crypto GameFi Platform - Multi-chain gaming platform",
  "main": "backend/server.js",
  "scripts": {
    "preinstall": "node scripts/check-dependencies.js",
    "postinstall": "npm run install:all",
    "install:all": "cd backend && npm install && cd ../frontend && npm install && cd ../admin && npm install",
    "check": "node scripts/quick-check.js",
    "start": "node scripts/start-platform.js",
    "add-rewards": "node backend/scripts/addTestRewards.js",
    "migrate-balances": "node backend/scripts/updateUserBalances.js",
    "fix-balances": "node backend/scripts/forceFixBalances.js",
    "check-balances": "node backend/scripts/verifyBalances.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/crypto-gamefi.git"
  },
  "keywords": [
    "crypto",
    "gaming",
    "blockchain",
    "gamefi",
    "casino",
    "web3",
    "ethereum",
    "bitcoin"
